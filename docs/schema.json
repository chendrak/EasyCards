{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TemplateFile",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ModSource": {
      "type": [
        "null",
        "string"
      ]
    },
    "Stats": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CardTemplate"
      }
    },
    "StatCards": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CardTemplate"
      }
    }
  },
  "definitions": {
    "CardTemplate": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Schema": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "TexturePath": {
          "type": [
            "null",
            "string"
          ]
        },
        "Rarity": {
          "$ref": "#/definitions/TemplateCardRarity"
        },
        "Tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TemplateCardTag"
          }
        },
        "DropWeight": {
          "type": "number",
          "format": "float"
        },
        "LevelUpWeight": {
          "type": "number",
          "format": "float"
        },
        "MaxLevel": {
          "type": "integer",
          "format": "int32"
        },
        "Modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ModifierTemplate"
          }
        },
        "NameLocalization": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "DescriptionLocalization": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "BanishesCardsByName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "BanishesCardsWithStatsOfType": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "RemovesCards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "RequiresAny": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/RequirementTemplate"
            }
          ]
        },
        "RequiresAll": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/RequirementTemplate"
            }
          ]
        },
        "DisabledInMode": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/DisabledInMode"
            }
          ]
        },
        "Effects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConfigurableEffect"
          }
        }
      }
    },
    "TemplateCardRarity": {
      "type": "string",
      "description": "",
      "x-enumNames": [
        "Tainted",
        "Normal",
        "Uncommon",
        "Rare",
        "Epic",
        "Heroic",
        "Ascended",
        "Synergy",
        "Evolution",
        "NONE"
      ],
      "enum": [
        "Tainted",
        "Normal",
        "Uncommon",
        "Rare",
        "Epic",
        "Heroic",
        "Ascended",
        "Synergy",
        "Evolution",
        "NONE"
      ]
    },
    "TemplateCardTag": {
      "type": "string",
      "description": "",
      "x-enumFlags": true,
      "x-enumNames": [
        "None",
        "Order",
        "Critical",
        "Defence",
        "Body",
        "Might",
        "Evolution"
      ],
      "enum": [
        "None",
        "Order",
        "Critical",
        "Defence",
        "Body",
        "Might",
        "Evolution"
      ]
    },
    "ModifierTemplate": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ModifierValue": {
          "type": "number",
          "format": "float"
        },
      